{% extends 'base.html.twig' %}

{% set title = "Error" %}

{% block body %}
<div class="container pad-top">
    {% if code == 404 %}
        <h2>Page not found</h2>
        <p>Unfortunately the requested page does not exist.</p>
        <p>Please use one of the navigation links above to return to the site.</p>
    {% else %}
        <p>Something went wrong. Please let our committee know if you encounter this error multiple times. 
        <br>
            Contact: <a href="mailto:committee@mutts.org.uk">committee@mutts.org.uk</a> 
        </p>
    {% endif %}
</div>
{% endblock %}